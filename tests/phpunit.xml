<?xml version="1.0" encoding="UTF-8"?>

<phpunit
        bootstrap="./bootstrap.php"
        backupGlobals="false"
        colors="true">
    <testsuites>
        <testsuite name="Delta CLI Test Suite">
            <directory suffix="Test.php">./</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../DeltaCli</directory>
        </whitelist>
    </filter>
</phpunit>
