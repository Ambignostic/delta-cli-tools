#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use DeltaCli\Command\CreateEnvironment;
use DeltaCli\Command\Deploy;
use Symfony\Component\Console\Application;

$application = new Application();
$application->setName('Delta Systems CLI Tools');
$application->addCommands(
    [
        new CreateEnvironment(),
        new Deploy()
    ]
);
$application->run();
